server {
    listen 80;
    listen [::]:80;
    server_name vpntgbot.kuzkabuh.ru;

    # ACME HTTP-01 challenge
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    # Остальное уводим на HTTPS:51821
    location / {
        return 301 https://$host:51821$request_uri;
    }
}
