# ----------------------------------------------------------
# Версия файла: 1.1.0
# Описание: Пример переменных окружения для VPN-проекта
# Дата изменения: 2025-12-29
# ----------------------------------------------------------

# -----------------------------
# PostgreSQL
# -----------------------------
# Название сервиса БД из docker-compose: vpn_db
DB_HOST=vpn_db
DB_PORT=5432
DB_NAME=vpn_service
DB_USER=vpn_user
DB_PASSWORD=change_me_strong_password

# DSN для backend (SQLAlchemy).
# Можно оставить пустым, тогда backend соберёт DSN из DB_*.
# Важно: host совпадает с DB_HOST (vpn_db).
BACKEND_DB_DSN=postgresql+psycopg2://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -----------------------------
# Telegram Bot
# -----------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------
# Backend
# -----------------------------
APP_ENV=production
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

BACKEND_BASE_URL=http://vpn_backend:8000

# Админский API-токен для внутренних bash-скриптов (реальное значение задать в .env)
MGMT_API_TOKEN=change_me_management_api_token

# -----------------------------
# Локация по умолчанию
# -----------------------------
WG_DEFAULT_LOCATION_CODE=eu-nl
WG_DEFAULT_LOCATION_NAME=Нидерланды

# -----------------------------
# WG-Easy (WG Dashboard)
# -----------------------------
# Публичный IP или домен сервера (для генерации конфигов, если понадобится на фронте/боте)
WG_HOST=YOUR_SERVER_PUBLIC_IP_OR_DOMAIN

# URL WG-Easy из docker-compose (внутри сети)
WG_EASY_URL=http://wg_dashboard:51821

# Пароль входа в веб-интерфейс WG-Easy (и для API)
WG_DASHBOARD_PASSWORD=change_me_strong_dashboard_password

# -----------------------------
# Резервное копирование БД
# -----------------------------
BACKUP_ENABLED=true
BACKUP_LOCAL_DIR=/opt/vpn-service/backups
BACKUP_RETENTION_DAYS=7

BACKUP_REMOTE_HOST=
BACKUP_REMOTE_USER=
BACKUP_REMOTE_DIR=
BACKUP_SSH_KEY=/root/.ssh/id_rsa